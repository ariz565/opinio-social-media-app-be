{
  "info": {
    "name": "Gulf Return Social Media API - Complete",
    "description": "Complete API collection for Gulf Return social media platform including advanced post management system",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "version": "2.0.0"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{access_token}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8000",
      "type": "string"
    },
    {
      "key": "access_token",
      "value": "",
      "type": "string"
    },
    {
      "key": "refresh_token",
      "value": "",
      "type": "string"
    },
    {
      "key": "user_id",
      "value": "",
      "type": "string"
    },
    {
      "key": "post_id",
      "value": "",
      "type": "string"
    },
    {
      "key": "draft_id",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "üîê Authentication",
      "item": [
        {
          "name": "Register User",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    pm.environment.set('user_id', response.user._id);",
                  "    console.log('User registered successfully');",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"john.doe@example.com\",\n  \"username\": \"johndoe\",\n  \"full_name\": \"John Doe\",\n  \"password\": \"SecurePass123!\",\n  \"date_of_birth\": \"1990-01-15\",\n  \"phone_number\": \"+1234567890\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/register",
              "host": ["{{base_url}}"],
              "path": ["auth", "register"]
            },
            "description": "Register a new user account"
          }
        },
        {
          "name": "Login User",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.environment.set('access_token', response.access_token);",
                  "    pm.environment.set('refresh_token', response.refresh_token);",
                  "    pm.environment.set('user_id', response.user._id);",
                  "    console.log('Login successful');",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"john.doe@example.com\",\n  \"password\": \"SecurePass123!\",\n  \"otp_code\": \"123456\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/login",
              "host": ["{{base_url}}"],
              "path": ["auth", "login"]
            },
            "description": "Login user (include otp_code for first-time login)"
          }
        },
        {
          "name": "Refresh Token",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.environment.set('access_token', response.access_token);",
                  "    console.log('Token refreshed successfully');",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"refresh_token\": \"{{refresh_token}}\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/refresh",
              "host": ["{{base_url}}"],
              "path": ["auth", "refresh"]
            }
          }
        }
      ]
    },
    {
      "name": "üìù Post Management",
      "item": [
        {
          "name": "Create Text Post",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    pm.environment.set('post_id', response.id);",
                  "    console.log('Post created successfully');",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"content\": \"This is my first post! üéâ #socialmedia #gulfreturn @johndoe\",\n  \"post_type\": \"text\",\n  \"hashtags\": [\"#socialmedia\", \"#gulfreturn\"],\n  \"visibility\": \"public\",\n  \"mood_activity\": {\n    \"mood\": \"excited\",\n    \"activity\": \"working\",\n    \"custom_status\": \"Building something amazing!\"\n  },\n  \"allow_comments\": true,\n  \"allow_shares\": true\n}"
            },
            "url": {
              "raw": "{{base_url}}/posts",
              "host": ["{{base_url}}"],
              "path": ["posts"]
            },
            "description": "Create a text post with mood/activity status"
          }
        },
        {
          "name": "Create Image Post",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    pm.environment.set('post_id', response.id);",
                  "    console.log('Image post created successfully');",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"content\": \"Check out these amazing photos from my trip! üì∏ #travel #photography\",\n  \"post_type\": \"image\",\n  \"media\": [\n    {\n      \"url\": \"https://example.com/image1.jpg\",\n      \"type\": \"image\",\n      \"width\": 1920,\n      \"height\": 1080,\n      \"alt_text\": \"Beautiful sunset over the ocean\"\n    },\n    {\n      \"url\": \"https://example.com/image2.jpg\",\n      \"type\": \"image\",\n      \"width\": 1920,\n      \"height\": 1080,\n      \"alt_text\": \"Mountain landscape view\"\n    }\n  ],\n  \"location\": {\n    \"name\": \"Dubai Marina\",\n    \"address\": \"Dubai Marina, Dubai, UAE\",\n    \"latitude\": 25.0657,\n    \"longitude\": 55.1396\n  },\n  \"hashtags\": [\"#travel\", \"#photography\", \"#dubai\"],\n  \"visibility\": \"public\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/posts",
              "host": ["{{base_url}}"],
              "path": ["posts"]
            },
            "description": "Create an image post with location and multiple media items"
          }
        },
        {
          "name": "Create Poll Post",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    pm.environment.set('post_id', response.id);",
                  "    console.log('Poll post created successfully');",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"content\": \"What's your favorite programming language? üíª #programming #poll\",\n  \"post_type\": \"poll\",\n  \"poll\": {\n    \"question\": \"What's your favorite programming language?\",\n    \"options\": [\n      {\n        \"text\": \"Python\",\n        \"votes\": 0,\n        \"voters\": []\n      },\n      {\n        \"text\": \"JavaScript\",\n        \"votes\": 0,\n        \"voters\": []\n      },\n      {\n        \"text\": \"Java\",\n        \"votes\": 0,\n        \"voters\": []\n      },\n      {\n        \"text\": \"Go\",\n        \"votes\": 0,\n        \"voters\": []\n      }\n    ],\n    \"multiple_choice\": false,\n    \"expires_at\": \"2024-12-31T23:59:59Z\",\n    \"total_votes\": 0\n  },\n  \"hashtags\": [\"#programming\", \"#poll\"],\n  \"visibility\": \"public\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/posts",
              "host": ["{{base_url}}"],
              "path": ["posts"]
            },
            "description": "Create a poll post with multiple options"
          }
        },
        {
          "name": "Save Draft",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    pm.environment.set('draft_id', response.id);",
                  "    console.log('Draft saved successfully');",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"content\": \"This is a draft post that I'm working on...\",\n  \"post_type\": \"text\",\n  \"hashtags\": [\"#draft\", \"#workinprogress\"],\n  \"visibility\": \"public\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/posts/drafts",
              "host": ["{{base_url}}"],
              "path": ["posts", "drafts"]
            },
            "description": "Save a post as draft"
          }
        },
        {
          "name": "Update Post",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"content\": \"Updated post content with new information! üîÑ\",\n  \"hashtags\": [\"#updated\", \"#socialmedia\"],\n  \"edit_reason\": \"Added more information and corrected typos\",\n  \"mood_activity\": {\n    \"mood\": \"productive\",\n    \"activity\": \"working\"\n  }\n}"
            },
            "url": {
              "raw": "{{base_url}}/posts/{{post_id}}",
              "host": ["{{base_url}}"],
              "path": ["posts", "{{post_id}}"]
            },
            "description": "Update an existing post with edit history tracking"
          }
        },
        {
          "name": "Get Single Post",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/posts/{{post_id}}",
              "host": ["{{base_url}}"],
              "path": ["posts", "{{post_id}}"]
            },
            "description": "Get a single post by ID"
          }
        },
        {
          "name": "Get Personal Feed",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/posts/feed?page=1&per_page=20",
              "host": ["{{base_url}}"],
              "path": ["posts", "feed"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "per_page",
                  "value": "20"
                }
              ]
            },
            "description": "Get personalized feed for authenticated user"
          }
        },
        {
          "name": "Pin Post to Profile",
          "request": {
            "method": "POST",
            "header": [],
            "url": {
              "raw": "{{base_url}}/posts/{{post_id}}/pin",
              "host": ["{{base_url}}"],
              "path": ["posts", "{{post_id}}", "pin"]
            },
            "description": "Pin a post to user's profile"
          }
        },
        {
          "name": "Vote on Poll",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"option_indices\": [0]\n}"
            },
            "url": {
              "raw": "{{base_url}}/posts/{{post_id}}/vote",
              "host": ["{{base_url}}"],
              "path": ["posts", "{{post_id}}", "vote"]
            },
            "description": "Vote on a poll (use option index from poll options array)"
          }
        }
      ]
    },
    {
      "name": "üîç Search & Discovery",
      "item": [
        {
          "name": "Search Posts",
          "request": {
            "method": "GET",
            "header": [],
